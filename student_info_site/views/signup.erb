<h2 class="h head_center">New Account</h2>
<form action="/signup/process" method="post">
<input class="input_center" type="text" name="name" placeholder="Username" required>
<br>
<input class="input_center" type="text" name="password" placeholder="Password" required>
<br>
  <center><input class="input_button_signup" type="submit" value="Sign Up"></center>
</form>
<% if session[:info]=='duplicate_account' %>
<p class="head_center"><span>Username already exists. Please try again.</span></p>
<% end %>
